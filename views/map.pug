extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-0 lg:py-10")
        h1(class="h1 text-center") Ubicación en el mapa

        //- filters
        div(class="py-8 px-4 rounded-lg mx-auto max-w-4xl my-5 md:px-10 space-y-6")
            h4.h4 Filtros:
            
            //- mobile filter 1
            div(class="flex gap-4 space-y-0 lg:hidden")
                //- sellRent
                div(class="dropdown relative w-1/2")
                    div(class="flex items-center gap-x-2 mb-1")
                        p.dropdown-icon-primary
                            include ../icons/homeDollar
                        label(for='sellRent' class="text-[15px] font-medium leading-tight") Venta / Renta
                    select(id="sellRent" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                        option(value="") Venta y renta
                            option(value='venta') En venta
                            option(value='renta') En renta
                //- categories
                div(class="dropdown relative w-1/2")
                    div(class="flex items-center gap-x-2 mb-1")
                        p.dropdown-icon-primary
                            include ../icons/category
                        label(for="categories" class="text-[15px] font-medium leading-tight") Categorias 
                    select(id="categories" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                        option(value="") Todas
                        each category in categories
                            option(value=category.id)= category.name
            //- prices
            div(class="dropdown relative w-full lg:hidden")
                div(class="flex items-center gap-x-2 mb-1")
                    p.dropdown-icon-primary
                        include ../icons/wallet
                    label(for="prices" class="text-[15px] font-medium leading-tight") Rango de precios 
                select(id="prices" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                    option(value="") Todos los rangos
                        each price in prices
                            option(value=price.id)= price.name
            //- mobile filter 2
            div(class="flex gap-4 space-y-0 lg:hidden")
                //- bedrooms
                div(class="dropdown relative w-1/3")
                    div(class="flex items-center gap-x-2 mb-1")
                        p(class="dropdown-icon-primary")
                            include ../icons/bed
                        label(for="wc" class="text-[15px] font-medium leading-tight") Dormitorios
                    select(id="bedrooms" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                        option(value="") Todos
                        option(value="0") 0
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="+4") +4
                //- WC
                div(class="dropdown relative w-1/3")
                    div(class="flex items-center gap-x-2 mb-1")
                        p(class="dropdown-icon-primary")
                            include ../icons/bath 
                        label(for="wc" class="text-[15px] font-medium leading-tight") Baños
                    select(id="wc" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                        option(value="") Todos
                        option(value="0") 0
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="+4") +4
                //- garage
                div(class="dropdown relative w-1/3")
                    div(class="flex items-center gap-x-2 mb-1")
                        p.dropdown-icon-primary
                            include ../icons/garage
                        label(for="garage" class="text-[15px] font-medium leading-tight") Garages
                    select(id="garage" class="dropdown-btn bg-transparent w-full text-left text-[15px] cursor-pointer")
                        option(value="") Todos
                        option(value="0") 0
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="+4") +4

            //- desktop filter 1
            div(class="lg:flex lg:gap-4 space-y-4 lg:space-y-0 hidden")
                //- sellRent
                div(class="dropdown relative lg:w-1/3")
                    div(class="flex items-center gap-x-2 mb-1")
