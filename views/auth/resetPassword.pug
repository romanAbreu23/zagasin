extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-semibold.text-center.text-accent Zagas
                span.text-hover !.. 
                span.font-normal.text-accent Inmobiliairia
        h2.text-center.text-2xl.font-semibold.text-secondary= pagina

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-100.text-red-700.text-xs.text-center.p-2.mb-1.font-bold.rounded= error.msg

        div.mt-8.mx-auto.max-w-lg
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(
                        type="hidden"
                        name="_csrf"
                        value= csrfToken
                    )
                    div
                        label.block.text-medium.text-accent.mb-2(for='password') Nuevo password
                        input#password.w-full.px-3.py-1.border.border-gray-300.outline-blue-400.rounded-md.text-secondary.placeholder-gray-400(
                            placeholder='Coloca tu nuevo password' 
                            type='password' 
                            name='password'
                        )
                    input(
                        type="submit", 
                        value="Confirmar password"
                        class="btn btn-sm btn-accent w-auto md:w-[280px] xl:w-[340px] mx-auto mt-10"
                    )